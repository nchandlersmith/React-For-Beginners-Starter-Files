/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform: translateX(-120%) rotate(0)
  transition 0.5s
  max-height: 0
  padding:0 !important
  &.order-enter-active
    max-height 60px
    transform translateX(0%) rotate(360deg)
    padding 2rem 0 !important
  
.order-exit
  transition: 0.5s
  transform: translateX(0) rotate(0)
  &.order-exit-active
    transform: translateX(120%) rotate(360deg)
    padding 0

.count-enter
  transition 0.5s
  transform translateY(100%)
  position absolute
  left 0
  right 0
  &.count-enter-active
    transform translateY(0%)

.count-exit
  transition 0.5s
  transform translateY(0%)
  &.count-exit-active
    transform translateY(-100%)